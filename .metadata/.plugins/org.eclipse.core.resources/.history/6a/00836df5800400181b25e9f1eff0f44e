public class Model {
	private static int player1 = 1;
	private static int player2 = 2;
	private int[][] board;
	
	public Model(){
		board = new int[8][8];
		setNewGame();	
	}
	
	public int getRow(){
		return board.length;
	}
	
	public int getCol(){
		return board[0].length;
	}
	
	public int getPlayer(int row, int col){
		return board[row][col];
	}
	
	public void setDisk(int row, int col, int player){
		checkIfLegitMove(row, col);
		board[row][col] = player;
	}

	public void getBoard(){
		for(int i = 0; i < getRow(); i++){
			for(int j = 0; j < getCol(); j++){
				System.out.print(getPlayer(i, j));
			}
			System.out.println(" ");
		}
	}
	
 	private void setNewGame(){
		board[3][3] = player1;
		board[4][4] = player1;
		board[3][4] = player2;
		board[4][3] = player2;
	}
	
	private boolean checkIfLegitMove(int row, int col){
		if(row >= 0 && row < 8 && col >= 0 && col < 8){
			return true;
		}
		return false;
	}
}
